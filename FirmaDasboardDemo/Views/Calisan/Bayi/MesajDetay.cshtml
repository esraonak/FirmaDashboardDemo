@model FirmaDasboardDemo.Models.BayiMesaj
@using Newtonsoft.Json
@using FirmaDasboardDemo.Dtos

@{
    ViewData["Title"] = "Mesaj Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var ticketKapaliMi = Model.AktifMi == false;
    var seo = ViewBag.FirmaSeo as string ?? "";
}

@section Styles {
    <style>
        .msg-container {
            /* Ekrana göre dinamik yükseklik */
            max-height: min(60vh, 600px);
            overflow-y: auto;
            padding: 15px;
            background: #f9f9f9;
            border: 1px solid #ddd;
            margin-bottom: 20px;
        }

        .msg-left, .msg-right {
            background-color: #e2f0ff;
            padding: 10px;
            border-radius: 10px;
            margin: 5px 0;
            max-width: 70%;
            word-break: break-word;
            overflow-wrap: anywhere;
        }

        .msg-right {
            background-color: #d4edda;
            margin-left: auto;
            text-align: left;
        }

        .msg-meta {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
        }

        /* Mesaj içerisindeki görseller taşmasın */
        .msg-left img, .msg-right img {
            max-width: 100%;
            height: auto;
        }

        /* Küçük ekranlarda baloncukları tam genişlik yap */
        @@media (max-width:576px) {
            .msg-left, .msg-right

        {
            max-width: 100%;
            padding: 8px;
        }

        }

        /* Bootstrap 4'te gap utility yok, bu sayfa özel minik destek */
        .gap-2 {
            gap: .5rem;
        }
    </style>
}

@functions {
    List<HucreDegeri> ParseJson(string json)
    {
        try { return JsonConvert.DeserializeObject<List<HucreDegeri>>(json) ?? new List<HucreDegeri>(); }
        catch { return new List<HucreDegeri>(); }
    }

    // Aynı satıra ait olanları grup olarak döndür
    Dictionary<string, List<HucreDegeri>> GrupBySatir(List<HucreDegeri> hucreler)
    {
        return hucreler
            .GroupBy(h => new string(h.HucreAdi.Where(char.IsDigit).ToArray()))
            .OrderBy(g => int.TryParse(g.Key, out int n) ? n : 0)
            .ToDictionary(g => g.Key, g => g.OrderBy(x => x.HucreAdi).ToList());
    }
}

<div class="card">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Mesaj Detay - @Model.Bayi?.Ad (@Model.Urun?.Ad)</h5>
    </div>

    <div class="card-body">

        @* 🧮 Hesaplama Detayı *@
        @if (Model.MesajTuru == FirmaDasboardDemo.Enums.BayiMesajTuru.HesaplamaSonucu)
        {
            <div class="mb-4 border rounded p-3 bg-light">
                <h6 class="text-secondary">🧮 Hesaplama Verileri:</h6>

                @{
                    var gorunen = GrupBySatir(ParseJson(Model.GorunenHucrelerJson));
                    var fiyatlar = GrupBySatir(ParseJson(Model.SatisFiyatlariJson));
                }

                <div class="mb-3">
                    <strong>Görünen Hücreler:</strong>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered mt-1 nowrap" style="width:100%">
                            <tbody>
                                @foreach (var grup in gorunen)
                                {
                                    <tr>
                                        @foreach (var hucre in grup.Value)
                                        {
                                            <td>@hucre.Deger</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mb-3">
                    <strong>Satış Fiyatları:</strong>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered mt-1 nowrap" style="width:100%">
                            <tbody>
                                @foreach (var grup in fiyatlar)
                                {
                                    <tr>
                                        @foreach (var hucre in grup.Value)
                                        {
                                            <td>@hucre.Deger</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @* 💬 Mesajlaşma Geçmişi *@
        <div class="msg-container">
            @foreach (var m in Model.Mesajlar.OrderBy(x => x.Tarih))
            {
                if (m.GonderenFirmaMi)
                {
                    <div class="msg-right">
                        <div>@Html.Raw(m.Icerik)</div>
                        <div class="msg-meta">Firma • @m.Tarih.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                }
                else
                {
                    <div class="msg-left">
                        <div>@Html.Raw(m.Icerik)</div>
                        <div class="msg-meta">Bayi • @m.Tarih.ToString("dd.MM.yyyy HH:mm")</div>
                    </div>
                }
            }
        </div>

        @* ✍️ Cevap Formu *@
        <form method="post" action="/@seo/Admin/Bayi/MesajCevapla">
            <input type="hidden" name="MesajId" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="cevap">💬 Firma Yanıtı</label>
                <textarea name="Cevap"
                          class="form-control"
                          rows="3"
                          required
                @(ticketKapaliMi ? "readonly disabled" : "")></textarea>
            </div>

            @if (ticketKapaliMi)
            {
                <div class="alert alert-warning">
                    Bu ticket kapatılmıştır. Yanıt gönderemezsiniz.
                </div>
            }

            <div class="d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-success" @(ticketKapaliMi ? "disabled" : "")>
                    ✔ Yanıtla
                </button>
                <a href="/@seo/Admin/Bayi/Mesajlar" class="btn btn-secondary">← Geri</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <script>
        $(function () {
        @if (TempData["Basari"] != null)
        {
            <text>toastr.success("@TempData["Basari"]");</text>
        }
        @if (TempData["Hata"] != null)
        {
            <text>toastr.error("@TempData["Hata"]");</text>
        }
        });
    </script>
}
