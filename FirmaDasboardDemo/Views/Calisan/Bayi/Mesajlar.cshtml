@model List<FirmaDasboardDemo.Models.BayiMesaj>
@{
    ViewData["Title"] = "Bayi Mesajları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var seo = ViewBag.FirmaSeo as string ?? "";
    var seciliBayi = ViewContext.HttpContext.Request.Query["bayiAd"].ToString();
    var aktifBayiId = ViewBag.AktifBayiId as int?;
    var okunmamisBayiIdListesi = ViewBag.OkunmamisBayiIdListesi as List<int> ?? new List<int>();
    var tumBayiler = ViewBag.Bayiler as List<FirmaDasboardDemo.Models.Bayi> ?? new List<FirmaDasboardDemo.Models.Bayi>();

}
<style>
    .bayi-button {
        margin-right: 5px;
        padding: 6px 12px;
        border-radius: 5px;
        border: 2px solid #ccc;
        background-color: white;
        cursor: pointer;
    }

        .bayi-button.glow {
            border-color: #ffc107;
            box-shadow: 0 0 10px #ffc107;
            font-weight: bold;
        }

        .bayi-button.active {
            background-color: #007bff;
            color: white;
        }
</style>

<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">📩 Bayi Mesajları</h5>
    </div>

    <div class="card-body">
        @* Bayi filtreleme menüsü *@
      

        <div class="mb-3">
            <strong>Bayiler:</strong>
            @foreach (var bayi in tumBayiler)
            {
                var isActive = aktifBayiId != null && bayi.Id == aktifBayiId;
                var hasUnread = okunmamisBayiIdListesi.Contains(bayi.Id);

                var classList = "bayi-button";
                if (hasUnread) classList += " glow";
                if (isActive) classList += " active";

                <a class="@classList"
                   href="/@seo/Admin/Bayi/Mesajlar?bayiId=@bayi.Id">
                    @bayi.Ad
                </a>
            }

            @if (aktifBayiId != null)
            {
                <a class="bayi-button" style="background-color: orange; color: white;"
                   href="/@seo/Admin/Bayi/Mesajlar">
                    ← Tüm Bayileri Göster
                </a>
            }
        </div>



        <table id="mesajlarTablosu" class="table table-striped table-bordered nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Bayi</th>
                    <th>Ürün</th>
                    <th>Mesaj Türü</th>
                    <th>Son Mesaj</th>
                    <th>Gönderim Tarihi</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mesaj in Model
                .Where(m => string.IsNullOrEmpty(seciliBayi) || m.Bayi?.Ad == seciliBayi))
                {
                    var sonMesaj = mesaj.Mesajlar?.OrderByDescending(x => x.Tarih).FirstOrDefault();
                    bool firmaOkumamis = mesaj.Mesajlar?.Any(m => !m.GonderenFirmaMi && !m.OkunduMu) ?? false;

                    string mesajTuruAd = mesaj.MesajTuru switch
                    {
                        FirmaDasboardDemo.Enums.BayiMesajTuru.HesaplamaSonucu => "Hesaplama",
                        FirmaDasboardDemo.Enums.BayiMesajTuru.Teklif => "Teklif",
                        FirmaDasboardDemo.Enums.BayiMesajTuru.Destek => "Destek",
                        _ => "Bilinmiyor"
                    };

                    <tr class="@(mesaj.AktifMi ? "" : "kapali-ticket")">
                        <td>@(mesaj.Bayi?.Ad ?? "-")</td>
                        <td>@(mesaj.Urun?.Ad ?? "-")</td>
                        <td>@mesajTuruAd</td>
                        <td>
                            @if (sonMesaj != null)
                            {
                                @Html.Raw(sonMesaj.Icerik?.Length > 50 ? sonMesaj.Icerik.Substring(0, 50) + "..." : sonMesaj.Icerik)
                            }
                            else
                            {
                                <i>Mesaj yok</i>
                            }
                        </td>
                        <td>
                            @if (sonMesaj != null)
                            {
                                @sonMesaj.Tarih.ToString("dd.MM.yyyy HH:mm")
                            }
                        </td>
                        <td>
                            @if (firmaOkumamis)
                            {
                                <span class="badge badge-warning">Yeni</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Okundu</span>
                            }
                        </td>
                        <td>
                            <!-- Detay (Buton + İkon) -->
                            <a href="/@seo/Admin/Bayi/MesajDetay/@mesaj.Id" class="btn btn-sm btn-info" title="Detay">
                                <i class="fas fa-eye"></i> Detay
                            </a>

                            <!-- Sil (sadece ikon) -->
                            <a href="javascript:void(0);" onclick="MesajSil(@mesaj.Id)" title="Sil">
                                <i class="fas fa-trash-alt text-danger ml-2"></i>
                            </a>

                            <!-- Ticket Kapat (sadece ikon) -->
                            <a href="javascript:void(0);" onclick="TicketKapat(@mesaj.Id)" title="Ticket Kapat">
                                <i class="fas fa-times-circle text-warning ml-2"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#mesajlarTablosu').DataTable({
                responsive: true,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
                }
            });
        });
    </script>
}
