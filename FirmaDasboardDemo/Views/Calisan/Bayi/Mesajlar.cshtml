@model List<FirmaDasboardDemo.Models.BayiMesaj>
@{
    ViewData["Title"] = "Bayi Mesajları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var seo = ViewBag.FirmaSeo as string ?? "";
    var seciliBayi = ViewContext.HttpContext.Request.Query["bayiAd"].ToString();
    var aktifBayiId = ViewBag.AktifBayiId as int?;
    var okunmamisBayiIdListesi = ViewBag.OkunmamisBayiIdListesi as List<int> ?? new List<int>();
    var tumBayiler = ViewBag.Bayiler as List<FirmaDasboardDemo.Models.Bayi> ?? new List<FirmaDasboardDemo.Models.Bayi>();
}

@section Styles {
    <!-- DataTables Bootstrap4 + Responsive CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap4.min.css" />
    <style>
        .bayi-button {
            margin-right: 5px;
            padding: 6px 12px;
            border-radius: 5px;
            border: 2px solid #ccc;
            background-color: #fff;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: .35rem;
            margin-bottom: .5rem;
        }

            .bayi-button.glow {
                border-color: #ffc107;
                box-shadow: 0 0 10px #ffc107;
                font-weight: 600;
            }

            .bayi-button.active {
                background-color: #007bff;
                color: #fff;
            }

        /* Tablo mobil uyumu */
        #mesajlarTablosu {
            width: 100% !important;
        }

        .badge {
            font-size: .85rem;
        }

        .btn i {
            margin-right: .25rem;
        }
        @@media (max-width: 576px) {
            .card-header h5

        {
            font-size: 1rem;
        }

        }
        /* Kapalı ticket görünümü (mevcut davranışı korur) */
        .kapali-ticket {
            background-color: #f2f2f2;
            color: #999;
            opacity: .9;
        }

            .kapali-ticket td {
                pointer-events: auto;
            }

            .kapali-ticket .btn, .kapali-ticket a {
                pointer-events: auto !important;
                opacity: .9 !important;
            }
    </style>
}

<div class="card mb-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">📩 Bayi Mesajları</h5>
    </div>

    <div class="card-body">
        <!-- Bayi filtreleme menüsü -->
        <div class="mb-3">
            <strong>Bayiler:</strong>
            @foreach (var bayi in tumBayiler)
            {
                var isActive = aktifBayiId != null && bayi.Id == aktifBayiId;
                var hasUnread = okunmamisBayiIdListesi.Contains(bayi.Id);

                var classList = "bayi-button";
                if (hasUnread) classList += " glow";
                if (isActive) classList += " active";

                <a class="@classList" href="/@seo/Admin/Bayi/Mesajlar?bayiId=@bayi.Id">
                    @bayi.Ad
                </a>
            }

            @if (aktifBayiId != null)
            {
                <a class="bayi-button" style="background-color: orange; color: white;"
                   href="/@seo/Admin/Bayi/Mesajlar">
                    ← Tüm Bayileri Göster
                </a>
            }
        </div>

        <div class="table-responsive">
            <table id="mesajlarTablosu" class="table table-striped table-bordered table-hover nowrap">
                <thead class="thead-light">
                    <tr>
                        <th>Bayi</th>
                        <th>Ürün</th>
                        <th>Mesaj Türü</th>
                        <th>Son Mesaj</th>
                        <th>Gönderim Tarihi</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mesaj in Model.Where(m => string.IsNullOrEmpty(seciliBayi) || m.Bayi?.Ad == seciliBayi))
                    {
                        var sonMesaj = mesaj.Mesajlar?.OrderByDescending(x => x.Tarih).FirstOrDefault();
                        bool firmaOkumamis = mesaj.Mesajlar?.Any(m => !m.GonderenFirmaMi && !m.OkunduMu) ?? false;

                        string mesajTuruAd = mesaj.MesajTuru switch
                        {
                            FirmaDasboardDemo.Enums.BayiMesajTuru.HesaplamaSonucu => "Hesaplama",
                            FirmaDasboardDemo.Enums.BayiMesajTuru.Teklif => "Teklif",
                            FirmaDasboardDemo.Enums.BayiMesajTuru.Destek => "Destek",
                            _ => "Bilinmiyor"
                        };

                        <tr class="@(mesaj.AktifMi ? "" : "kapali-ticket")">
                            <td>@(mesaj.Bayi?.Ad ?? "-")</td>
                            <td>@(mesaj.Urun?.Ad ?? "-")</td>
                            <td>@mesajTuruAd</td>
                            <td>
                                @if (sonMesaj != null)
                                {
                                    @Html.Raw(sonMesaj.Icerik?.Length > 50 ? sonMesaj.Icerik.Substring(0, 50) + "..." : sonMesaj.Icerik)
                                }
                                else
                                {
                                    <i>Mesaj yok</i>
                                }
                            </td>
                            <td>@(sonMesaj != null ? sonMesaj.Tarih.ToString("dd.MM.yyyy HH:mm") : "")</td>
                            <td>
                                @if (firmaOkumamis)
                                {
                                    <span class="badge badge-warning">Yeni</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Okundu</span>
                                }
                            </td>
                            <td class="text-nowrap">
                                <!-- Detay -->
                                <a href="/@seo/Admin/Bayi/MesajDetay/@mesaj.Id" class="btn btn-sm btn-info" title="Detay">
                                    <i class="fas fa-eye"></i> Detay
                                </a>
                                <!-- Sil -->
                                <a href="javascript:void(0);" onclick="MesajSil(@mesaj.Id)" title="Sil">
                                    <i class="fas fa-trash-alt text-danger ml-2"></i>
                                </a>
                                <!-- Ticket Kapat -->
                                <a href="javascript:void(0);" onclick="TicketKapat(@mesaj.Id)" title="Ticket Kapat">
                                    <i class="fas fa-times-circle text-warning ml-2"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables core + Bootstrap4 + Responsive JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap4.min.js"></script>

    <script>
        $(function () {
            $('#mesajlarTablosu').DataTable({
                responsive: true,
                autoWidth: false,
                deferRender: true,
                language: { url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" },
                order: [],
                columnDefs: [
                    { targets: 0, responsivePriority: 1 }, // Bayi
                    { targets: 3, responsivePriority: 2 }, // Son Mesaj
                    { targets: 6, responsivePriority: 1 }, // İşlem
                    { targets: '_all', className: 'align-middle' }
                ]
            });
        });
    </script>
}
