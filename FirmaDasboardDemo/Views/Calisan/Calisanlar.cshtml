@{
    ViewData["Title"] = "Çalışanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var seoUrl = Context.Session.GetString("FirmaSeoUrl") ?? "TENTECI";
    ViewBag.SirketSeoUrl = seoUrl;
}


@section Styles {
    <style>
        .action-buttons {
            display: flex;
            gap: 5px;
        }
    </style>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">Çalışan Listesi</h3>
        <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#addModal">Yeni Çalışan Ekle</button>
    </div>
    <div class="card-body">
        <table id="calisanTable" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Aktif</th>
                    <th>İşlem</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- ➕ Yeni Çalışan Ekle Modalı -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="/@ViewBag.SirketSeoUrl/Admin/AddCalisan">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Çalışan</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input name="AdSoyad" class="form-control mb-2" placeholder="Ad Soyad" required />
                    <input name="Email" type="email" class="form-control mb-2" placeholder="Email" />
                    <input name="Telefon" class="form-control mb-2" placeholder="Telefon" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ✏️ Düzenleme Modalı -->
<!-- ✏️ Düzenleme Modalı -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="editForm">
                <!-- ⛔️ action ve method kaldırıldı -->
                <div class="modal-header">
                    <h5 class="modal-title">Çalışan Düzenle</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input name="Id" type="hidden" />
                    <input name="AdSoyad" class="form-control mb-2" placeholder="Ad Soyad" required />
                    <input name="Email" type="email" class="form-control mb-2" placeholder="Email" />
                    <input name="Telefon" class="form-control mb-2" placeholder="Telefon" />
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="AktifMi" />
                        <label class="form-check-label">Aktif</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <!-- toastr.css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <!-- toastr.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        const seo = '@ViewBag.SirketSeoUrl';

        $(document).ready(function () {
            const table = $('#calisanTable').DataTable({
                ajax: {
                    url: `/${seo}/Admin/Calisan/GetCalisanlar`,
                    dataSrc: ''
                },
                columns: [
                    { data: 'adSoyad' },
                    { data: 'email' },
                    { data: 'telefon' },
                    {
                        data: 'aktifMi',
                        render: data => data ? 'Evet' : 'Hayır'
                    },
                    {
                        data: 'id',
                        render: data => `
                            <div class="action-buttons">
                                <button class="btn btn-warning btn-sm edit-btn" data-id="${data}">Düzenle</button>
                                <button class="btn btn-danger btn-sm delete-btn" data-id="${data}">Sil</button>
                            </div>
                        `,
                        orderable: false,
                        searchable: false
                    }
                ]
            });

            // ➕ Ekle
            $('#addForm').submit(function (e) {
                e.preventDefault();
                const formData = $(this).serialize();
                $.post(`/${seo}/Admin/AddCalisan`, formData, function (res) {
                    if (res.status === "email_exists") {
                        toastr.error("Bu email zaten kullanılıyor.");
                    } else if (res.status === "success") {
                        $('#addModal').modal('hide');
                        toastr.success("Çalışan başarıyla eklendi.");
                        table.ajax.reload();
                    }
                });
            });

            // ✏️ Düzenle
            $('#calisanTable').on('click', '.edit-btn', function () {
                const id = $(this).data('id');
                $.get(`/${seo}/Admin/Calisan/GetCalisanById/${id}`, function (data) {
                    const form = $('#editForm');
                    form.find('[name=Id]').val(data.id);
                    form.find('[name=AdSoyad]').val(data.adSoyad);
                    form.find('[name=Email]').val(data.email);
                    form.find('[name=Telefon]').val(data.telefon);
                    form.find('[name=AktifMi]').prop('checked', data.aktifMi);
                    $('#editModal').modal('show');
                });
            });

            // 🔁 Güncelle
                   // 🔁 Güncelleme
        $('#editForm').submit(function (e) {
            e.preventDefault();

            const form = $(this);
            const formData = {
                Id: form.find('input[name="Id"]').val(),
                AdSoyad: form.find('input[name="AdSoyad"]').val(),
                Email: form.find('input[name="Email"]').val(),
                Telefon: form.find('input[name="Telefon"]').val(),
                AktifMi: form.find('input[name="AktifMi"]').is(':checked')
            };

            $.ajax({
                url: `/${seo}/Admin/Calisan/UpdateCalisan`,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (res) {
                    if (res.status === 'success') {
                        $('#editModal').modal('hide');
                        toastr.success("Çalışan başarıyla güncellendi.");
                        table.ajax.reload();
                    }
                }
            });
        });


            // ❌ Sil
                  // ❌ Sil
        $('#calisanTable').on('click', '.delete-btn', function () {
            const id = $(this).data('id');
            if (confirm("Çalışanı silmek istiyor musunuz?")) {
                $.post(`/${seo}/Admin/Calisan/DeleteCalisan`, { id }, function (res) {
                    if (res.status === "deleted") {
                        table.ajax.reload();
                        toastr.success("Çalışan başarıyla silindi.");
                    }
                });
            }
        });

        });
    </script>
}