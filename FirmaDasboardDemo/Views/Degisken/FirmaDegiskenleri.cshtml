@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Firma Değişkenleri";
    var seo = Context.Request.RouteValues["firmaSeoUrl"];
}

<!-- ✅ TOAST Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
    <div id="toastSuccess" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">İşlem başarılı.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
    <div id="toastError" class="toast align-items-center text-white bg-danger border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">Bir hata oluştu.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Firma Değişkenleri</h5>
        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#ekleModal">+ Yeni Değişken</button>
    </div>
    <div class="card-body">
        <table id="degiskenTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Açıklama</th>
                    <th>Değer</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- ✅ Ekle Modal -->
<div class="modal fade" id="ekleModal" tabindex="-1">
    <div class="modal-dialog">
        <form id="ekleForm" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Firma Değişkeni</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body row">
                <div class="col-md-12 mb-2">
                    <label>Ad</label>
                    <input name="Ad" class="form-control" required />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Açıklama</label>
                    <input name="Aciklama" class="form-control" />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Değer</label>
                    <input name="Deger" class="form-control" type="number" step="0.01" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<!-- ✅ Güncelle Modal -->
<div class="modal fade" id="guncelleModal" tabindex="-1">
    <div class="modal-dialog">
        <form id="guncelleForm" class="modal-content">
            <input type="hidden" name="Id" />
            <div class="modal-header">
                <h5 class="modal-title">Firma Değişkeni Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body row">
                <div class="col-md-12 mb-2">
                    <label>Ad</label>
                    <input name="Ad" class="form-control" required />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Açıklama</label>
                    <input name="Aciklama" class="form-control" />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Değer</label>
                    <input name="Deger" class="form-control" type="number" step="0.01" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <script>
        const seo = "@seo";

        $(document).ready(function () {
            const table = $("#degiskenTable").DataTable({
                ajax: `/${seo}/Admin/Degisken/GetAll`,
                columns: [
                    { data: "ad" },
                    { data: "aciklama" },
                    { data: "deger" },
                    {
                        data: null,
                        render: data => `
                            <button class="btn btn-sm btn-warning me-1" onclick="guncelleDegisken(${data.id})">Güncelle</button>
                            <button class="btn btn-sm btn-danger" onclick="silDegisken(${data.id})">Sil</button>`
                    }
                ]
            });

            // ✅ Yeni değişken ekleme
            $("#ekleForm").submit(function (e) {
                e.preventDefault();
                const form = $(this);
                $.post(`/${seo}/Admin/Degisken/Ekle`, form.serialize(), function (res) {
                    if (res.status === "success") {
                        $("#ekleModal").modal("hide");
                        form[0].reset();
                        table.ajax.reload();
                        showToast("toastSuccess", "Değişken başarıyla eklendi.");
                    } else if (res.status === "duplicate") {
                        showToast("toastError", "Bu adla zaten bir değişken var.");
                    } else {
                        showToast("toastError", "Bir hata oluştu.");
                    }
                });
            });

            // ✅ Güncelleme
            $("#guncelleForm").submit(function (e) {
                e.preventDefault();
                const form = $(this);
                $.post(`/${seo}/Admin/Degisken/Guncelle`, form.serialize(), function (res) {
                    if (res.status === "success") {
                        $("#guncelleModal").modal("hide");
                        $("#degiskenTable").DataTable().ajax.reload();
                        showToast("toastSuccess", "Değişken başarıyla güncellendi.");
                    } else if (res.status === "duplicate") {
                        showToast("toastError", "Bu adla başka bir değişken var.");
                    } else if (res.status === "concurrency") {
                        showToast("toastError", "Veri başka bir işlem tarafından değiştirilmiş.");
                    } else {
                        showToast("toastError", "Bir hata oluştu.");
                    }
                });
            });
        });

        function silDegisken(id) {
            if (!confirm("Silmek istediğinize emin misiniz?")) return;
            $.post(`/${seo}/Admin/Degisken/Sil/${id}`, function (res) {
                if (res.status === "success") {
                    $("#degiskenTable").DataTable().ajax.reload();
                    showToast("toastSuccess", "Değişken silindi.");
                }
            });
        }

        function guncelleDegisken(id) {
            $.get(`/${seo}/Admin/Degisken/GetById/${id}`, function (data) {
                if (!data) return;
                $("#guncelleForm [name='Id']").val(data.id);
                $("#guncelleForm [name='Ad']").val(data.ad);
                $("#guncelleForm [name='Aciklama']").val(data.aciklama);
                $("#guncelleForm [name='Deger']").val(data.deger);
                $("#guncelleModal").modal("show");
            });
        }

        function showToast(id, message) {
            const toastEl = document.getElementById(id);
            toastEl.querySelector(".toast-body").innerText = message;
            new bootstrap.Toast(toastEl).show();
        }
    </script>
}
