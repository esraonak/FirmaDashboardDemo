@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Firma Değişkenleri";
    var seo = Context.Request.RouteValues["firmaSeoUrl"];
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Firma Değişkenleri</h5>
        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#ekleModal">+ Yeni Değişken</button>
    </div>
    <div class="card-body">
        <table id="degiskenTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Açıklama</th>
                    <th>Değer</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- ✅ Ekle Modal -->
<div class="modal fade" id="ekleModal" tabindex="-1">
    <div class="modal-dialog">
        <form id="ekleForm" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Firma Değişkeni</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body row">
                <div class="col-md-12 mb-2">
                    <label>Ad</label>
                    <input name="Ad" class="form-control" required />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Açıklama</label>
                    <input name="Aciklama" class="form-control" />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Değer</label>
                    <input name="Deger" class="form-control" type="number" step="0.01" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<!-- ✅ Güncelle Modal -->
<div class="modal fade" id="guncelleModal" tabindex="-1">
    <div class="modal-dialog">
        <form id="guncelleForm" class="modal-content">
            <input type="hidden" name="Id" />
            <div class="modal-header">
                <h5 class="modal-title">Firma Değişkeni Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body row">
                <div class="col-md-12 mb-2">
                    <label>Ad</label>
                    <input name="Ad" class="form-control" required />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Açıklama</label>
                    <input name="Aciklama" class="form-control" />
                </div>
                <div class="col-md-12 mb-2">
                    <label>Değer</label>
                    <input name="Deger" class="form-control" type="number" step="0.01" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <script>
        const seo = "@seo";

        toastr.options = {
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        $(document).ready(function () {
            const table = $("#degiskenTable").DataTable({
                ajax: `/${seo}/Admin/Degisken/GetAll`,
                columns: [
                    { data: "ad" },
                    { data: "aciklama" },
                    { data: "deger" },
                    {
                        data: null,
                        render: data => `
                            <button class="btn btn-sm btn-warning me-1" onclick="guncelleDegisken(${data.id})">Güncelle</button>
                            <button class="btn btn-sm btn-danger" onclick="silDegisken(${data.id})">Sil</button>`
                    }
                ]
            });

            $("#ekleForm").submit(function (e) {
                e.preventDefault();
                const form = $(this);
                $.post(`/${seo}/Admin/Degisken/Ekle`, form.serialize(), function (res) {
                    if (res.status === "success") {
                        $("#ekleModal").modal("hide");
                        form[0].reset();
                        table.ajax.reload();
                        toastr.success("✅ Değişken başarıyla eklendi.");
                    } else if (res.status === "duplicate") {
                        toastr.error("⚠️ Bu adla zaten bir değişken var.");
                    } else {
                        toastr.error("❌ Bir hata oluştu.");
                    }
                });
            });

            $("#guncelleForm").submit(function (e) {
                e.preventDefault();
                const form = $(this);
                $.post(`/${seo}/Admin/Degisken/Guncelle`, form.serialize(), function (res) {
                    if (res.status === "success") {
                        $("#guncelleModal").modal("hide");
                        table.ajax.reload();
                        toastr.success("✅ Değişken başarıyla güncellendi.");
                    } else if (res.status === "duplicate") {
                        toastr.error("⚠️ Bu adla başka bir değişken var.");
                    } else if (res.status === "concurrency") {
                        toastr.error("⚠️ Veri başka bir işlem tarafından değiştirilmiş.");
                    } else {
                        toastr.error("❌ Güncelleme sırasında hata oluştu.");
                    }
                });
            });
        });

        function silDegisken(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: 'Bu değişkeni silmek istediğinizden emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, sil',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post(`/${seo}/Admin/Degisken/Sil/${id}`, function (res) {
                        if (res.status === "success") {
                            $("#degiskenTable").DataTable().ajax.reload();
                            toastr.success("✅ Değişken silindi.");
                        } else {
                            toastr.error("❌ Silme işlemi başarısız oldu.");
                        }
                    });
                }
            });
        }

        function guncelleDegisken(id) {
            $.get(`/${seo}/Admin/Degisken/GetById/${id}`, function (data) {
                if (!data) return;
                $("#guncelleForm [name='Id']").val(data.id);
                $("#guncelleForm [name='Ad']").val(data.ad);
                $("#guncelleForm [name='Aciklama']").val(data.aciklama);
                $("#guncelleForm [name='Deger']").val(data.deger);
                $("#guncelleModal").modal("show");
            });
        }
    </script>
}
