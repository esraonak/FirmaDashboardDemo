@{
    Layout = null;
    var seo = Context.Session.GetString("FirmaSeoUrl");
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" />

    <!-- Font Awesome (yerel) -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" />

    <!-- AdminLTE + site -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- DataTables Bootstrap4 + Responsive CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap4.min.css" />

    @RenderSection("Styles", required: false)

    <style>
        .kapali-ticket {
            background-color: #f2f2f2 !important;
            color: #999 !important;
            opacity: .7;
        }

            .kapali-ticket .badge {
                background-color: #bbb !important;
                color: #444 !important;
            }

            .kapali-ticket td {
                pointer-events: none;
            }

                .kapali-ticket td:last-child a {
                    pointer-events: auto !important;
                    opacity: 1 !important;
                }

        /* küçük ekranda başlıklar taşmasın */
        @@media (max-width:576px) {
            .main-header .h5

        {
            font-size: 1rem;
        }

        .brand-text {
            font-size: .9rem;
        }

        }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <div class="d-flex align-items-center">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                <span class="ml-2 font-weight-bold h5 mb-0">Bayi Paneli</span>
            </div>

            <div class="ml-auto d-flex align-items-center flex-wrap pr-3">
                @if (!string.IsNullOrEmpty(Context.Session.GetString("Instagram")))
                {
                    <a href="@Context.Session.GetString("Instagram")" target="_blank" class="btn btn-outline-danger btn-sm mx-1">
                        <i class="fab fa-instagram"></i>
                    </a>
                }
                @if (!string.IsNullOrEmpty(Context.Session.GetString("Twitter")))
                {
                    <a href="@Context.Session.GetString("Twitter")" target="_blank" class="btn btn-outline-info btn-sm mx-1">
                        <i class="fab fa-twitter"></i>
                    </a>
                }
                @if (!string.IsNullOrEmpty(Context.Session.GetString("Facebook")))
                {
                    <a href="@Context.Session.GetString("Facebook")" target="_blank" class="btn btn-outline-primary btn-sm mx-1">
                        <i class="fab fa-facebook"></i>
                    </a>
                }
                @if (!string.IsNullOrEmpty(Context.Session.GetString("WebSitesi")))
                {
                    <a href="@Context.Session.GetString("WebSitesi")" target="_blank" class="btn btn-outline-success btn-sm mx-1">
                        <i class="fas fa-globe"></i>
                    </a>
                }
            </div>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link d-flex align-items-center">
                @if (!string.IsNullOrEmpty(ViewBag.FirmaLogo))
                {
                    <img src="@ViewBag.FirmaLogo" alt="Logo" class="brand-image img-circle elevation-3 ml-2"
                         style="opacity:.9; width:35px; height:35px; object-fit:contain;" />
                }
                else
                {
                    <i class="fas fa-cogs ml-3 mr-2"></i>
                }
                <span class="brand-text font-weight-bold ml-2">@($"{seo?.ToUpper()} BAYİ PANELİ")</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column">
                        <li class="nav-item">
                            <a href="/@seo/Bayi/Dashboard" class="nav-link">
                                <i class="nav-icon fas fa-calculator"></i><p>Hesaplama</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/@seo/Bayi/Mesajlarim" class="nav-link">
                                <i class="nav-icon fas fa-comments"></i><p>Firma Mesajları</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/@seo/Bayi/KullaniciAyar" class="nav-link">
                                <i class="nav-icon fas fa-cog"></i><p>Kullanıcı Ayarları</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/@seo/Bayi/Login" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i><p>Çıkış Yap</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- İçerik -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer text-sm">
            <div class="float-right d-none d-sm-inline">v1.0</div>
            <strong>&copy; 2025 FirmaDashboard</strong> Tüm hakları saklıdır.
        </footer>
    </div>

    <!-- JS (tek jQuery) -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- DataTables core + Bootstrap4 + Responsive JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap4.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
