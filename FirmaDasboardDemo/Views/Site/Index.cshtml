@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="TenteCRM ile bayi teklif süreçlerinizi kolaylaştırın. Bayiler kendi verilerini girer, anında teklif alır.">
    <meta name="keywords" content="CRM, bayi, teklif, formül, hesaplama, otomasyon, satış">
    <meta name="author" content="TenteCRM">

    <title>TenteCRM - Sizin İçin Tasarlandı</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
    <script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

    <style>
        :root {
            --container-max: 1200px;
        }

        * {
            box-sizing: border-box
        }

        img, video {
            max-width: 100%;
            height: auto;
            display: block
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #f9f9f9;
            color: #333;
        }

        html {
            scroll-behavior: smooth;
        }

        .container {
            max-width: var(--container-max);
            margin: 0 auto;
            padding: 0 20px;
        }

        .hero {
            background: linear-gradient(135deg, #0088cc, #00b894);
            color: white;
            padding: 100px 20px;
            text-align: center;
        }

            .hero h1 {
                font-size: 48px;
                margin-bottom: 20px;
                line-height: 1.15;
            }

            .hero p {
                font-size: 20px;
                margin-bottom: 30px;
            }

            .hero .cta-buttons {
                display: flex;
                gap: 12px;
                justify-content: center;
                flex-wrap: wrap;
            }

                .hero .cta-buttons button {
                    background: white;
                    color: #00a8ff;
                    border: none;
                    padding: 15px 25px;
                    margin: 10px 6px;
                    font-size: 16px;
                    border-radius: 10px;
                    cursor: pointer;
                    transition: all 0.3s ease;
                }

                    .hero .cta-buttons button:hover {
                        background: #f0f0f0;
                    }

        .section {
            padding: 80px 20px;
            text-align: center;
        }

            .section h2 {
                font-size: 36px;
                margin-bottom: 30px;
            }

        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            max-width: var(--container-max);
            margin: 0 auto;
            padding: 0 20px;
        }

        .feature {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            text-align: center;
        }

            .feature i {
                font-size: 36px;
                color: #00b894;
                margin-bottom: 15px;
            }

        .features-section {
            background-color: #f4f6f8;
        }

            .features-section h2 {
                font-weight: 700;
                margin-bottom: 50px;
                color: #222;
            }

        .form-section {
            background: linear-gradient(135deg, #e0f7ef, #ffffff);
            padding: 60px 20px;
        }

        .form-wrapper {
            max-width: 600px;
            margin: auto;
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

            .form-wrapper h2 {
                font-size: 32px;
                margin-bottom: 25px;
                color: #00897b;
            }

            .form-wrapper input,
            .form-wrapper textarea {
                width: 100%;
                padding: 14px 18px;
                margin-bottom: 20px;
                border-radius: 8px;
                border: 1px solid #ccc;
                font-size: 16px;
            }

            .form-wrapper button {
                background: #00b894;
                border: none;
                padding: 14px 30px;
                font-size: 16px;
                border-radius: 8px;
                color: white;
                cursor: pointer;
                transition: 0.3s ease;
            }

                .form-wrapper button:hover {
                    background: #009b7d;
                }

        .whatsapp-button {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 100;
        }

            .whatsapp-button a {
                background: #25D366;
                color: white;
                padding: 15px 20px;
                border-radius: 50px;
                text-decoration: none;
                font-size: 18px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.2);
                display: inline-flex;
                align-items: center;
                gap: .5rem;
            }

        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .alert-success {
            background-color: #e6f9f0;
            color: #0b8457;
        }

        .alert-danger {
            background-color: #fdecea;
            color: #d32f2f;
        }

        /* ------ Responsive dokunuşlar ------ */
        @@media (max-width: 992px) {
            .hero

        {
            padding: 80px 20px;
        }

        .hero h1 {
            font-size: 40px;
        }

        .section h2 {
            font-size: 32px;
        }

        }
        @@media (max-width: 768px) {
            .hero h1

        {
            font-size: 34px;
        }

        .hero p {
            font-size: 18px;
        }

        .hero .cta-buttons button {
            width: 100%;
            max-width: 340px;
        }

        .form-wrapper {
            padding: 28px;
        }

        }
        @@media (max-width: 576px) {
            .hero

        {
            padding: 60px 16px;
        }

        .hero h1 {
            font-size: 28px;
        }

        .hero p {
            font-size: 16px;
        }

        .section {
            padding: 56px 16px;
        }

            .section h2 {
                font-size: 26px;
            }

        .whatsapp-button {
            bottom: 16px;
            right: 16px;
        }

        footer p {
            line-height: 1.6;
        }

        }
    </style>
</head>
<body>

    <!-- Hero -->
    <section class="hero" data-aos="fade-up"
             style="background: linear-gradient(to right, #008dd0, #00b7a0); color: white; padding: 20px 20px 40px 20px;">

        <!-- Logo -->
        <div style="max-width: 250px; margin: 0 auto 10px auto; text-align: center;">
            <img src="~/tentecrmlogo/chatgpt image 31 tem 2025 17_59_58.png"
                 alt="TenteCRM Logo" loading="lazy"
                 style="max-width: 100%; height: auto;" />
        </div>

        <!-- Başlık -->
        <h1 style="text-align: center; font-size: 2.6rem; font-weight: bold; margin: 10px 0;">
            Bayilerinizin Fiyat Sormasına Gerek Kalmadan
        </h1>

        <!-- Alt Açıklama -->
        <p style="text-align: center; font-size: 1.2rem; margin: 0 0 30px 0;">
            TenteCRM ile tüm bayileriniz, kendi verilerini girerek saniyeler içinde teklif alır.
            WhatsApp karmaşasına son verin.
        </p>

        <!-- Butonlar -->
        <div class="cta-buttons" style="text-align: center;">
            <button onclick="document.getElementById('demo-form').scrollIntoView({ behavior: 'smooth' });">
                Hemen Demo Al
            </button>
            <button onclick="window.open('https://wa.me/905524025752','_blank')">
                Canlı Destek
            </button>
        </div>

        <!-- Lottie -->
        <lottie-player src="https://assets4.lottiefiles.com/packages/lf20_dmw3t0vg.json"
                       background="transparent" speed="1"
                       style="width: 320px; height: 320px; margin: 30px auto 0;" loop autoplay>
        </lottie-player>
    </section>

    <!-- Neden TenteCRM? -->
    <section class="section features-section" data-aos="fade-up">
        <div class="container">
            <h2>Neden TenteCRM?</h2>
            <div class="feature-grid">
                <div class="feature" data-aos="zoom-in" data-aos-delay="0">
                    <i class="fas fa-bolt"></i>
                    <h4>Anında Teklif Hesaplama</h4>
                    <p>Bayileriniz kendi verilerini girer, saniyeler içinde fiyat alır.</p>
                </div>
                <div class="feature" data-aos="zoom-in" data-aos-delay="100">
                    <i class="fas fa-user-shield"></i>
                    <h4>Bayi Yetki Kontrolü</h4>
                    <p>Her bayi sadece kendi verilerini görür; tablo ve fiyatlar güvende kalır.</p>
                </div>
                <div class="feature" data-aos="zoom-in" data-aos-delay="200">
                    <i class="fas fa-tablet-alt"></i>
                    <h4>Mobil ve Tablet Uyumlu</h4>
                    <p>Ofiste, sahada ya da araçta — bayi paneli her cihazda çalışır.</p>
                </div>
                <div class="feature" data-aos="zoom-in" data-aos-delay="300">
                    <i class="fas fa-rocket"></i>
                    <h4>Teklif Sürecini Hızlandırın</h4>
                    <p>WhatsApp ve Excel karışıklığına son verin. 3 kat daha hızlı bayi yönetimi sağlayın.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- TenteCRM Nasıl Çalışır? -->
    <div style="height: 40px; background: transparent;"></div>
    <section class="section" style="background: #eef3f5;" data-aos="fade-up">
        <div class="container" style="text-align: center;">
            <h2 style="margin-bottom: 30px;">TenteCRM Nasıl Çalışır?</h2>
            <p style="font-size: 18px; margin-bottom: 40px;">
                Aşağıdaki örnekte bir bayinin kendi verilerini girerek anında teklif almasını izleyin.
            </p>

            <video autoplay muted loop playsinline
                   style="max-width: 100%; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                <source src="/demo/demo.mp4" type="video/mp4" />
                Tarayıcınız video etiketini desteklemiyor.
            </video>
        </div>
    </section>

    <!-- Sosyal Kanıt -->
    <section class="section" data-aos="fade-up">
        <div class="container">
            <h2>Firmaların Güvendiği Sistem</h2>

            <div style="display: flex; justify-content: center; flex-wrap: wrap; gap: 40px; margin-top: 40px;">
                <img src="https://via.placeholder.com/120x60?text=Firma+1" alt="Firma 1" data-aos="zoom-in" loading="lazy" />
                <img src="https://via.placeholder.com/120x60?text=Firma+2" alt="Firma 2" data-aos="zoom-in" data-aos-delay="100" loading="lazy" />
                <img src="https://via.placeholder.com/120x60?text=Firma+3" alt="Firma 3" data-aos="zoom-in" data-aos-delay="200" loading="lazy" />
                <img src="https://via.placeholder.com/120x60?text=Firma+4" alt="Firma 4" data-aos="zoom-in" data-aos-delay="300" loading="lazy" />
            </div>

            <div class="container" style="max-width: 700px; margin: 50px auto 0; background: #f8f8f8; padding: 30px; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.05);">
                <p style="font-size: 18px; font-style: italic;">"TenteCRM sayesinde bayi süreçlerimizi %70 hızlandırdık. Excel ve WhatsApp'tan tamamen kurtulduk!"</p>
                <p style="font-weight: bold; margin-top: 10px;">— Burak Yılmaz, ABC Tente</p>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="section" style="background: linear-gradient(135deg, #00b894, #00cec9); color: white;" data-aos="fade-up">
        <div class="container" style="text-align: center;">
            <h2 style="margin-bottom: 20px;">Siz de TenteCRM ile bayilerinizi dijitalleştirin</h2>
            <p style="font-size: 18px; margin-bottom: 30px;">Sadece birkaç tıklamayla teklif süreçlerinizi kolaylaştırın.</p>

            <button onclick="document.getElementById('demo-form').scrollIntoView({ behavior: 'smooth' });"
                    style="background: white; color: #00b894; font-weight: bold; padding: 14px 28px; font-size: 16px; border-radius: 8px; border: none; cursor: pointer;">
                Ücretsiz Demo Talep Et
            </button>
        </div>
    </section>

    <!-- Demo Talep Formu -->
    <section class="section form-section" id="demo-form" data-aos="fade-up">
        <div class="form-wrapper">
            <h2>Demo Talep Formu</h2>

            @* TempData mesajları *@
            @if (TempData["Mesaj"] != null)
            {
                <div class="alert alert-success">@TempData["Mesaj"]</div>
            }
            else if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger">@TempData["Hata"]</div>
            }

            <form method="post" action="/Site/DemoTalep">
                @Html.AntiForgeryToken()
                <input type="text" name="AdSoyad" placeholder="Ad Soyad" required />
                <input type="email" name="Email" placeholder="E-posta" required />
                <input type="text" name="FirmaAdi" placeholder="Firma Adı" required />
                <input type="tel" name="Telefon" placeholder="Telefon Numarası" required />
                <textarea name="Not" placeholder="Mesajınız..." rows="4"></textarea>
                <button type="submit">Demo Talep Et</button>
            </form>
        </div>
    </section>

    <!-- footer -->
    <footer style="background: #1e272e; color: white; padding: 40px 20px; text-align: center;">
        <p style="margin: 0; font-size: 14px;">&copy; @DateTime.Now.Year TenteCRM. Tüm hakları saklıdır.</p>
        <p style="margin-top: 10px;">
            <a href="https://www.instagram.com/tentecrm" target="_blank" rel="noopener" style="color: #ccc; margin: 0 10px;">Instagram</a>
            <a href="https://www.facebook.com/tentecrm" target="_blank" rel="noopener" style="color: #ccc; margin: 0 10px;">Facebook</a>
            <a href="https://www.twitter.com/tentecrm" target="_blank" rel="noopener" style="color: #ccc; margin: 0 10px;">Twitter</a>
        </p>
    </footer>

    <!-- WhatsApp Destek Butonu -->
    <div class="whatsapp-button">
        <a href="https://wa.me/905524025752" target="_blank" rel="noopener">
            <i class="fab fa-whatsapp"></i> Canlı Destek
        </a>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script> AOS.init(); </script>
</body>
</html>
